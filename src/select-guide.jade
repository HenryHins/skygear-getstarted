
// == Define React Component ==
// react: SelectPlatform

main(style= Style.selectPage)

  header
    h4(style=[ Style.header.tagline ]) GET STARTED NOW!
    p(style=[ Style.header.title ])
      | Which platform are you getting to start with?
    p(style=[ Style.header.subtitle ])
      | Choose your platform for developing your app with Skygear.

  // platform: iOS
  section(style=[ new Style.platform.Item('ios') ], onClick=setSDK('ios'))

    span(style=[ Style.platform.tick, new Style.ShowOnActive('ios') ])
      = React.createElement(IconTick)

    span(style=[ Style.platform.icon ])
      = React.createElement(IconIos)

    h3(style=[ Style.platform.title ]) iOS
    p(style=[ Style.platform.desc ]) Build an app for iPhone, iPad and Apple Watch

    = SelectProjectType('ios')

  // platform: Android
  section(style=[ new Style.platform.Item('android') ], onClick=setSDK('android'))

    span(style=[ Style.platform.tick, new Style.ShowOnActive('android') ])
      = React.createElement(IconTick)

    span(style=[ Style.platform.icon ])
      = React.createElement(IconAndroid)

    h3(style=[ Style.platform.title ]) Android
    p(style=[ Style.platform.desc ]) Build an app for Android devices

    = SelectProjectType('android')

  // platform Web(JS)
  section(style=[ new Style.platform.Item('js') ], onClick=setSDK('js'))

    span(style=[ Style.platform.tick, new Style.ShowOnActive('js') ])
      = React.createElement(IconTick)

    span(style=[ Style.platform.icon ])
      = React.createElement(IconWeb)

    h3(style=[ Style.platform.title ]) Web
    p(style=[ Style.platform.desc ]) Develop cross platfrom browser-based app

    = SelectProjectType('js')


