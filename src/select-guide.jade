  div(style= new PlatformStyle('android'), onClick=setSDK('android'))
    span(style= new PlatformTickStyle('android'))
      = r(IconTick)
    span(style=platformIcon)
      = r(IconAndroid)
    h3(style=platformTitle) Android
    p(style=platformDesc) Build an app for Android devices
    = r(SelectGuideType, SelectGuideTypeProps('android'))

  div(style= new PlatformStyle('js'), onClick=setSDK('js'))
    span(style= new PlatformTickStyle('js'))
      = r(IconTick)
    span(style=platformIcon)
      = r(IconWeb)
    h3(style=platformTitle) Web
    p(style=platformDesc) Develop  cross platfrom browser-based app
    = r(SelectGuideType, SelectGuideTypeProps('js'))

